<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
    <!-- Customize header  -->
    <template id="primewood_header" inherit_id="website.layout" name="Primewood Header">

      <!-- Assign an id  -->
      <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
        <attribute name="id">primewood_header</attribute>
      </xpath>

      <!-- Replace logo -->
      <xpath expr="//header//a[@class='navbar-brand']" position="replace">
        <a href="/" class="navbar-brand logo">
          <img src="/theme_primewood/static/img/primewood-200x200.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name" width="200px" height="69px" class="primewood_logo"/>
        </a>
      </xpath>

    </template>


  </data>
</odoo>
