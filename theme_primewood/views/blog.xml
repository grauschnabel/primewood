<?xml version="1.0"?>
<odoo>
  <record id="view_blog_post_form" model="ir.ui.view">
    <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
    <field name="model">blog.post</field>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='subtitle']" position="after">
        <field name="teaser_manual" placeholer="Short version for overview."/>
      </xpath>
    </field>
  </record>

  <template id="blog_feed" inherit_id="website_blog.blog_feed" name="Primewood Blog Feed">
    <xpath expr="//entry/summary" position="replace">
      <summary t-raw="post.teaser"/>
    </xpath>
  </template>

  <template id="blog_post_short" inherit_id="website_blog.blog_post_short" name="Primewood Blog Post Short">
    <xpath expr="//div[@class='oe_structure']" position="replace">
      <div class="oe_structure">
        <section class="s_text_block_image_fw oe_img_bg oe_custom_bg" style="background-image: url(/web/image/theme_primewood.s_background_image_03); background-position: center center; background-size: cover;" >
          <div class="container">
            <div class="row">
              <div class="col-md-12 mb128" style="padding: 6em;">
                <br/>
                <br/>
                <h1 class="text-alpha text-center" t-field="blog.name"/>
                <h3 class="text-alpha text-center text-muted" t-field="blog.subtitle"/>
                <br/>
              </div>
            </div>
          </div>
        </section>
      </div>
    </xpath>

    <xpath expr="//p[@t-field='blog_post.teaser']" position="replace">
      <p t-raw="blog_post.teaser" class="mb12 mt12 o_blog_post_teaser"/>
    </xpath>

    <xpath expr="(//div[@class='oe_structure'])[last()]" position="before">
      <section class="s_text_block_image_fw oe_img_bg oe_custom_bg" style="background-image: url(/web/image/theme_primewood.s_background_image_03); background-position: center center; background-size: cover;" >
        <div class="container">
          <div class="row">
            <div class="col-md-12 mb128" style="padding: 6em;">
              <br/>
              <br/>
              <br/>
              <br/>
            </div>
          </div>
        </div>
      </section>
    </xpath>
  </template>

  <template id="blog_post_complete" inherit_id="website_blog.blog_post_complete" name="Primewood Blog Post">
    <xpath expr="//t[@t-foreach='blog_post.tag_ids']" position="replace">
      <t t-foreach="blog_post.tag_ids" t-as="one_tag">
        <a t-attf-href="#{blog_url(tag=one_tag.id)}" t-esc="one_tag.name"/>
      </t>
    </xpath>
  </template>
</odoo>
